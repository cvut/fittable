
---
extends: [standard, standard-react]
env:
  browser: true
  node: true
  es6: true
ecmaFeatures:
  modules: true
rules:
  camelcase: [2]
  no-var: [1]
  prefer-const: [1]
  comma-dangle: [2, always-multiline]
  react/jsx-quotes: [2, double, avoid-escape]
  curly: [2, all]
  max-len: [2, 120, 2]
  no-extra-bind: [2]
  # FIXME: supported in future ESLint:
  # max-len: [2, 120, 2, {ignoreComments: true, ignoreUrls: true}]
